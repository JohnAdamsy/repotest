<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.strathmore.egeza3"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    
    <!-- Allow Internet connection -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Network State Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
   

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.strathmore.egeza3.MainActivity"
            android:label="@string/app_name" >
        </activity>
      
        <!-- Register Activity -->
       <activity
            android:name="edu.strathmore.egeza3.Register"
            android:label="@string/activity_register_name" >
       </activity>
       
        <!-- Login Activity -->
       <activity
            android:name="edu.strathmore.egeza3.LoginActivity"
            android:label="@string/activity_login_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
       </activity>
       
         <!-- Book Parking Activity -->
       <activity
            android:name="edu.strathmore.egeza3.BookParking"
            android:label="@string/activity_parking_name" >
       </activity>
        
       
    </application>

</manifest>